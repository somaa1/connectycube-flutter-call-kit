<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF6B6B"
    android:fitsSystemWindows="true">

    <!-- Status Bar Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <!-- Close Button -->
        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="onEndCall"
            android:padding="6dp"
            android:src="@drawable/ic_close"
            android:layout_weight="1"
            android:gravity="end"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp">

        <!-- Avatar -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatar_img"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/circleImageView"
            tools:ignore="ContentDescription"
            tools:src="@drawable/photo_placeholder" />

        <!-- Caller Name -->
        <TextView
            android:id="@+id/user_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:lines="1"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Richa" />

        <!-- Message Bubble -->
        <LinearLayout
            android:id="@+id/message_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/message_bubble_background"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/custom_message_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2dp"
                android:textColor="#333333"
                android:textSize="14sp"
                android:gravity="center"
                tools:text="Urgent! Call back whenever you have a moment." />
        </LinearLayout>

        <!-- Message Label -->
        <TextView
            android:id="@+id/message_label_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:fontFamily="sans-serif"
            android:text="Message"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:alpha="0.85"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Slide to Answer Button -->
    <com.connectycube.flutter.connectycube_flutter_call_kit.SlideToAnswerView
        android:id="@+id/slide_to_answer_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Hidden Call Type Text for Compatibility -->
    <TextView
        android:id="@+id/call_type_txt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:text="Incoming audio call" />

    <!-- Hidden Legacy Buttons for Compatibility -->
    <ImageView
        android:id="@+id/end_call_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/start_call_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</RelativeLayout>